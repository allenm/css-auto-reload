{
    "name":"css auto reload",
    "version":"1.0.2",
    "description":"It can help you automaticly reload the css files in the browser after you modified them, without ruining your codes.",
    "permissions":["tabs","<all_urls>"],

    "icons":{
        "16":"imgs/refresh-16.png",
        "48":"imgs/refresh-48.png",
        "128":"imgs/refresh-128.png"
    },

    "background_page":"background.html",
    "browser_action": {
        "default_icon": "imgs/refresh-unactive-19.png", 
        "default_title": "on/off css auto reload"
    }
}
